<script type="text/javascript">
function ajaxAction() {
    $('#ajax-result').empty();
    $.getJSON('/blog/status', [], function(data) {
        var $div = $('#ajax-result');

        $div.addClass('alert alert-success');

        $div.append('<h4>Version Information</h4>');

        var items = [];
        $.each(data, function( key, val ) {
            items.push('<li>' + key + ': ' + val + '</li>');
        });

        $('<ul/>', {
            html: items.join('')
        }).appendTo($div);
    });

    return false;
}
</script>
