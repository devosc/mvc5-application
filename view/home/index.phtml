<div class="jumbotron">
    <h1><a href="<?= $this->url('home') ?>"><?= $this->title() ?></a></h1>
    <p class="lead"><?= $this['message'] ?: 'Demo Application.'; ?></p>
    <pre><?= __FILE__; ?></pre>
    <div id="ajax-result"></div>
    <p>
        <a style="margin-left:10px;" class="btn btn-primary btn-lg" href="#" role="button" onclick="return ajaxAction();">Info</a>
        <a style="margin-left:10px;" class="btn btn-primary btn-lg" href="#" role="button" onclick="return ajaxHtmlAction();">About</a>
    </p>
</div>
<script type="text/javascript">
function ajaxAction() {
    $('#ajax-result').empty();
    $.getJSON('<?php echo $this->url('app', ['controller' => 'status']); ?>', [], function(data) {
        var $div = $('#ajax-result');

        $div.addClass('alert alert-success');

        $div.append('<h4>Version Information</h4>');

        var items = [];
        $.each(data, function( key, val ) {
            items.push('<li>' + key + ': ' + val + '</li>');
        });

        $('<ul/>', {
            html: items.join('')
        }).appendTo($div);
    });

    return false;
}
function ajaxHtmlAction() {
    $('#ajax-result').empty();
    $.get('<?php echo $this->url('app', ['controller' => 'about']); ?>', [], function(data) {
        var $div = $('#ajax-result');

        $div.addClass('alert alert-success');

        $div.append('<p>'+data+'</p>');
    });

    return false;
}
</script>
